owner: yourusername
repo: yourrepo

# Multiple secrets (recommended)
secrets:
  MY_SECRET_1: secret_value_1
  MY_SECRET_2: secret_value_2
  API_KEY: your_api_key
  DATABASE_URL: postgres://user:pass@host:5432/db
  
  # File-based secrets - reads contents from file
  SSL_CERT: file(/path/to/cert.pem)
  PRIVATE_KEY: file(./keys/private.key)
  CONFIG_JSON: file(config.json)

# Single secret (backward compatibility)
# secret: MY_SECRET
# value: secret_value

token: ghp_abc123...  # optional
